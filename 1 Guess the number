from random import randint

imie = input("Jak masz na imię: ")
print("Cześć " + imie + ", zgadnij moją liczbę między 1 a 10")

liczba = randint(1,10)



for i in range(1,7):
    lpodana = int(input("Podaj liczbę "))
    
    if lpodana < liczba:
        print("Za mała")
    elif lpodana > liczba:
        print("za duża")
    else:
        break
    
if lpodana == liczba:
    print("dobrze moja liczba to: " + str(liczba) + ", zgadłeś za " + str(i)+ " razem")
else:          
    print("lipa, myślełem o liczbie " + str(liczba))
